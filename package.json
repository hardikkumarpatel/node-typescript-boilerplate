{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Hardik Patel",
  "main": "server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf build",
    "start": "nodemon",
    "watch": "babel src --out-dir build --extensions '.ts' --watch",
    "build": "npm run clean && babel src --out-dir build --extensions '.ts' --source-maps --copy-files",
    "start:dev": "npm run build && cross-env NODE_ENV=development nodemon --config nodemon.common.json --exec node build/server.js",
    "start:stage": "npm run build && cross-env NODE_ENV=staging nodemon --config nodemon.common.json --exec node build/server.js",
    "start:prod": "npm run build && cross-env  NODE_ENV=production nodemon --config nodemon.common.json --exec node build/server.js",
    "compile": "tsc -b",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "npx eslint .",
    "lint:fix": "DEBUG=eslint:* npx eslint --fix .",
    "prepare": "husky || true",
    "commitlint": "commitlint --edit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "npx eslint ."
    ]
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "^4.19.2",
    "express-basic-auth": "1.2.1",
    "express-promise-wrap": "0.2.2",
    "glob": "10.4.3",
    "helmet": "7.1.0",
    "http-status-code": "2.1.0",
    "http-status-codes": "2.3.0",
    "morgan": "1.10.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "winston": "3.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/js": "^9.6.0",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/dotenv": "8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "4.0.0",
    "@types/http-status-codes": "1.2.0",
    "@types/morgan": "1.9.9",
    "@types/node": "20.14.9",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@types/winston": "2.4.4",
    "babel-plugin-module-resolver": "5.0.2",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "eslint": "9.x",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.7.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "nodemon": "3.1.4",
    "prettier": "^3.3.2",
    "rimraf": "5.0.7",
    "socket.io": "4.7.5",
    "ts-node": "10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "typescript-transform-paths": "3.4.7"
  },
  "engines": {
    "node": "20"
  }
}
